            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp">

                <TextView
                    android:text="历史练字记录:"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/textView4"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:text="15"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/fra_practise_textview_historyrecorded"
                    android:layout_weight="1"
                    android:gravity="center_vertical"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <TextView
                    android:text="今天练字记录:"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/textView6"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:text="8"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/fra_practise_textview_todayrecorded"
                    android:layout_weight="1"
                    android:gravity="center_vertical"/>
            </LinearLayout>
        </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:text="6字帖练习"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/fra_practise_button_sixWordPractise"
            android:layout_margin="20dp"
            android:background="#ff0"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1" />

        <Button
            android:text="9字帖练习"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:id="@+id/fra_practise_button_nineWordPractise"
            android:layout_weight="1"
            android:background="#ff00"
            android:layout_marginRight="20dp"/>

        <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fra_practise_Button_original"
            android:layout_weight="1" />

        <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fra_practise_Button_original_one"
            android:layout_weight="1" />
    </LinearLayout>

