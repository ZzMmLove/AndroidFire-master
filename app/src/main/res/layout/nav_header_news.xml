<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    style="@style/news_summary_card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardElevation="2dp"
    app:cardCornerRadius="8dp"
    >

    <RelativeLayout
        android:id="@+id/rl_root"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="?attr/dayNightBackgroundDrawable"
        app:dayNightBackgroundAttr="dayNightBackgroundDrawable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/history_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/news_summary_photo_iv"
            android:layout_marginRight="@dimen/item_margin"
            android:layout_toRightOf="@+id/news_summary_photo_iv"
            android:lines="2"
            android:textColor="?attr/dayNightOneTextColor"
            app:dayNightOneTextColorAttr="dayNightOneTextColor"
            android:textSize="@dimen/font_normal"
            tools:text="习近平:吹响建设科技强国号角国号角国号角"/>

        <TextView
            android:id="@+id/history_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/history_name"
            android:layout_marginRight="@dimen/item_margin"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/news_summary_photo_iv"
            android:ellipsize="end"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="?attr/dayNightTwoTextColor"
            app:dayNightTwoTextColorAttr="dayNightTwoTextColor"
            android:textSize="@dimen/font_small"
            tools:text="科技是国之利器"/>

        <TextView
            android:id="@+id/history_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/history_type"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="@dimen/item_margin"
            android:textColor="?attr/dayNightTwoTextColor"
            app:dayNightTwoTextColorAttr="dayNightTwoTextColor"
            android:textSize="@dimen/font_tiny"
            tools:text="05-28 20:09"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>